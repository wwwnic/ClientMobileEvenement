<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/connexion">
    <fragment
        android:id="@+id/connexion"
        android:name="com.even.ui.fragment.connexion"
        android:label="connexion">
        <action
            android:id="@+id/action_connexion_to_enregistrement"
            app:destination="@id/enregistrement" />
        <action
            android:id="@+id/action_connexion_to_principal"
            app:destination="@id/principal"
            app:popUpTo="@id/connexion"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/enregistrement"
        android:name="com.even.ui.fragment.enregistrement"
        android:label="fragment_enregistrement2">
        <action
            android:id="@+id/action_enregistrement_to_connexion2"
            app:destination="@id/connexion" />
    </fragment>
    <fragment
        app/src/main/res/navigation/nav_graph.xml
        android:id="@+id/principal"
        android:name="com.even.ui.fragment.principal"
        android:label="principal" />
    <fragment
        android:id="@+id/modifier_evenement"
        android:name="com.even.ui.fragment.modifier_evenement"
        android:label="fragment_modifier_evenement"
        tools:layout="@layout/fragment_modifier_evenement" />
    <fragment
        android:id="@+id/modification_compte"
        android:name="com.even.modification_compte"
        android:label="fragment_modification_compte"
        tools:layout="@layout/fragment_modification_compte" />
    <fragment
        android:id="@+id/detailEvenement"
        android:name="com.even.detailEvenement"
        android:label="fragment_detail_evenement"
        tools:layout="@layout/fragment_detail_evenement" />
</navigation>