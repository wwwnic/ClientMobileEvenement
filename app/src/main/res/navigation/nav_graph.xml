<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/connexion">

    <fragment
        android:id="@+id/connexion"
        android:name="com.even.ui.fragment.connexion"
        android:label="connexion">
        <action
            android:id="@+id/action_connexion_to_enregistrement"
            app:destination="@id/enregistrement" />
        <action
            android:id="@+id/action_connexion_to_liste_evenement"
            app:destination="@id/liste_evenement" />
    </fragment>
    <fragment
        android:id="@+id/liste_evenement"
        android:name="com.even.ui.fragment.liste_evenement"
        android:label="liste_evenement"
        tools:layout="@layout/fragment_liste_evenement">
        <action
            android:id="@+id/action_liste_evenement_to_mesEvenements"
            app:destination="@id/mesEvenements" />
        <action
            android:id="@+id/action_liste_evenement_to_recherche"
            app:destination="@id/recherche" />
    </fragment>
    <fragment
        android:id="@+id/fragment_question"
        android:name="com.even.ui.fragment.fragment_question"
        android:label="fragment_question" />
    <fragment
        android:id="@+id/enregistrement"
        android:name="com.even.ui.fragment.enregistrement"
        android:label="fragment_enregistrement2">
        <action
            android:id="@+id/action_enregistrement_to_connexion2"
            app:destination="@id/connexion" />
    </fragment>
    <fragment
        android:id="@+id/recherche"
        android:name="com.even.ui.fragment.recherche"
        android:label="recherche"
        tools:layout="@layout/fragment_recherche">
        <action
            android:id="@+id/action_recherche_to_liste_evenement"
            app:destination="@id/liste_evenement" />
        <action
            android:id="@+id/action_recherche_to_mesEvenements"
            app:destination="@id/mesEvenements" />
    </fragment>
    <fragment
        android:id="@+id/mesEvenements"
        android:name="com.even.ui.fragment.mesEvenements"
        android:label="fragment_mes_evenements"
        tools:layout="@layout/fragment_mes_evenements" >
        <action
            android:id="@+id/action_mesEvenements_to_recherche"
            app:destination="@id/recherche" />
        <action
            android:id="@+id/action_mesEvenements_to_liste_evenement"
            app:destination="@id/liste_evenement" />
    </fragment>
</navigation>